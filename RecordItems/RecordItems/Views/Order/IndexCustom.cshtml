@model IEnumerable<RecordItems.Models.Order>

@{
    ViewBag.Title = "IndexCustom";
}
<div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("Заказ", "IndexCustom", "Order")</li>
        <li>@Html.ActionLink("Склад", "IndexCustom", "Item")</li>
        <li>@Html.ActionLink("Поставщики", "IndexCustom", "Seller")</li>
    </ul>
</div>
<h2>История заказов</h2>

    <p>
        @Html.ActionLink("Заказать товар", "CreateCustom")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.ActionLink("Детали", "DetailsCustom", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
