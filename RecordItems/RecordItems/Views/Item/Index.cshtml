@model IEnumerable<RecordItems.Models.Item>

@{
    ViewBag.Title = "Товары";
}
<div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("Заказ", "Index", "Order")</li>
        <li>@Html.ActionLink("Склад", "Index", "Item")</li>
        <li>@Html.ActionLink("Поставщики", "Index", "Seller")</li>
        <li>@Html.ActionLink("Пользователи", "Index", "User")</li>
        <li>@Html.ActionLink("Поставки", "Index", "Supply")</li>
    </ul>
</div>
<h2>Список товаров</h2>

<p>
    @Html.ActionLink("Добавить товар", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seller)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seller)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.ActionLink("Детали", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
